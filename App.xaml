<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="BookNest.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BookNest"
    xmlns:converters="clr-namespace:BookNest.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Add the TransactionStatusToColorConverter -->
            <converters:TransactionStatusToColorConverter x:Key="TransactionStatusToColorConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
